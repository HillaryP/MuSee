<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#3F4752">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:src="@drawable/fingerclick" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="40dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/inside_imageview"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/tutorial_2_shape" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="SELECT"
            android:textColor="#FFF"
            android:textSize="35dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Select an artifact pin to learn more about its origin."
            android:textColor="#FFF"
            android:textSize="18dp"
            android:lineSpacingExtra="3dp"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:layout_width="90dp"
            android:layout_height="8dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/swipe3" />
        </LinearLayout>
</LinearLayout>
