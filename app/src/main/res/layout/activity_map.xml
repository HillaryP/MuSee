<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context="edu.uw.prathh.musee.info.MapActivity">
    <include layout="@layout/header_layout"
        android:id="@+id/header" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_marginRight="-10dp"
            android:id="@+id/floor1"
            android:layout_gravity="left"
            android:textStyle="bold"
            android:paddingLeft="45dp"
            android:paddingRight="45dp"
            android:textAllCaps="false"
            android:text="Lower Floor"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/floor2"
            android:textStyle="bold"
            android:layout_margin="0dp"
            android:layout_gravity="right"
            android:paddingLeft="45dp"
            android:textAllCaps="false"
            android:paddingRight="45dp"
            android:text="Upper Floor"/>

    </LinearLayout>

    <ImageView
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:id="@+id/lowerfloor"
        android:src="@drawable/maplowerfloor"
    />

    <ImageView
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:id="@+id/upperfloor"
        android:src="@drawable/mapupperfloor"
        />
</LinearLayout>